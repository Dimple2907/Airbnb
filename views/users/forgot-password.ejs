<% layout("/layouts/boilerplate") %>
<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="auth-card">
                <div class="auth-header">
                    <div class="auth-icon">
                        <i class="fas fa-key"></i>
                    </div>
                    <h2 class="auth-title">Forgot Password</h2>
                    <p class="auth-subtitle">Enter your email to reset your password</p>
                </div>
                <form action="/forgot-password" method="post" class="needs-validation auth-form" novalidate>
                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email Address
                        </label>
                        <input type="email" name="email" id="email" class="form-control modern-input" placeholder="Enter your email address" required>
                        <div class="invalid-feedback">Please enter a valid email address</div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 auth-submit">
                        <span class="btn-text"><i class="fas fa-paper-plane"></i> Send Reset Link</span>
                    </button>
                </form>
                <div class="auth-footer mt-3">
                    <a href="/login" class="auth-link">Back to Login</a>
                </div>
                <% if (success && success.length > 0) { %>
                    <div class="alert alert-success mt-3"><%= success %></div>
                <% } %>
                <% if (error && error.length > 0) { %>
                    <div class="alert alert-danger mt-3"><%= error %></div>
                <% } %>
            </div>
        </div>
    </div>
</div>
